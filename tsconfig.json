    "declaration": true,
    "module": "esnext",
    "target": "esnext",
    "strict": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
